### Path Variables

# user bin
export PATH="$PATH:$HOME/bin"
# current folder node_modules' bin (/!\ this setting is dangerous if malicious package is installed)
export PATH="$PATH:./node_modules/.bin"

# brew
export PATH="/usr/local/bin:$PATH"
export PATH="/usr/local/sbin:$PATH"

# ruby
export PATH="/usr/local/opt/ruby/bin:$PATH"
export PATH="$PATH:$HOME/.gem/bin"

# Postgres client libpq without full postgres
export PATH="/opt/homebrew/opt/libpq/bin:$PATH"

# Make the non "g" aliased versions of GNU coreutils to be exported to your path
export PATH="$HOMEBREW_PREFIX/opt/coreutils/libexec/gnubin:$PATH"
